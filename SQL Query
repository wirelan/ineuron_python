SHOW DATABASES;

CREATE DATABASE abc;

DROP DATABASE test_new;
DROP DATABASE abc;
USE test;

CREATE TABLE IF NOT exists employee
(
    id INT,
    name VARCHAR(50)
);

SHOW TABLES;

SHOW CREATE TABLE employee;
DROP TABLE employee;
SHOW TABLES;
CREATE TABLE IF NOT EXISTS employee
(
    id INT,
    name VARCHAR(50),
    salary DOUBLE,
    hiring_date DATE
);


INSERT INTO employee VALUES (1, "Sourabh", 500, "2021-06-22");

